@model MaintenanceType

@{
    ViewData["Title"] = "Edit Maintenance Type";
}
<div class="container d-flex justify-content-center mt-5">
    <div class="col-8">
        <section class="card">
            <header class="card-header">

                <h4 class="card-title">Edit</h4>
            </header>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="MaintenanceTypeID" type="hidden" />

                    <div class="form-group">
                        <label asp-for="TypeName">Maintenance Type<span class="text-danger">*</span></label>
                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <a asp-action="Index" asp-controller="MaintenanceType" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>

            </div>
        </section>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
