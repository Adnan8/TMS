@model Vehicle

@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-8">
        <section class="card">
            <header class="card-header">

                <h4 class="card-title">Edit</h4>
            </header>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="VehicleID" type="hidden" />

                    <div class="form-group">
                        <label asp-for="LicenseNumber">License Number<span class="text-danger">*</span></label>
                        <input asp-for="LicenseNumber" class="form-control" />
                        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Make">Make<span class="text-danger">*</span></label>
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Model">Model<span class="text-danger">*</span></label>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year">Year<span class="text-danger">*</span></label>
                        <input asp-for="Year" type="number" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <a asp-action="Index" asp-controller="Vehicle" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>



            </div>
        </section>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
